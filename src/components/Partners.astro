---
import Container from "./Container.astro"

---
<div id="partners">
    <Container>
            <div class="mt-20 grid grid-cols-3 sm:grid-cols-4 md:grid-cols-7">
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                    <img src="./images/partners/truora.png" class="h-12 w-auto mx-auto" loading="lazy" alt="Truora logo" width="" height="" />
                </div>
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                <img src="./images/partners/bbva.png" class="h-8 w-auto mx-auto" loading="lazy" alt="BBVA logo" width="" height="" />
                </div>
                <div class="p-4 flex grayscale transition duration-200 hover:grayscale-0">
                <img src="./images/partners/google.svg" class="h-9 w-auto m-auto" loading="lazy" alt="Google logo" width="" height="" />
                </div>
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                    <img src="./images/partners/morado.png" class="h-12 w-auto mx-auto" loading="lazy" alt="Morado logo" width="" height="" />
                </div>
                <div class="p-4 flex grayscale transition duration-200 hover:grayscale-0">
                    <img src="./images/partners/ccb.png" class="h-8 w-auto m-auto" loading="lazy" alt="CCB logo" width="" height="" />
                </div>
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                    <img src="./images/partners/ccc.png" class="h-9 w-auto mx-auto" loading="lazy" alt="CCC logo" width="" height="" />
                </div>
                <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                    <img src="./images/partners/kill-b.svg" class="h-7 w-auto mx-auto" loading="lazy" alt="KILLB logo" width="" height="" />
                </div>
            </div>
        </div>
    </Container>
</div>