---
import { Image } from "astro:assets";
import Container from "./Container.astro";

import rebecca_portilla_profile from "../../public/images/staff/rebecca_portilla_profile.jpg";
import Makers from "../../public/favicon.svg";
---

<section class="flex text-center">
  <Container>
    <h2
      class="mb-20 space-y-4 text-5xl font-bold text-gray-800 md:text-4xl dark:text-white"
    >
      Team Lead
    </h2>
    <div
      class="justify-items-center text-gray-800 dark:text-white gap-8 w-full"
    >
      <article
        class="lg:flex gap-8 h-full w-1/2 mx-auto my-0 p-8 border border-gray-100 rounded-3xl bg-white dark:bg-gray-800 dark:border-gray-700 shadow-2xl shadow-gray-600/10 dark:shadow-none"
      >
        <Image
          src={rebecca_portilla_profile}
          alt="Rebecca Portilla smiley face"
          width={130}
          height={130}
          class="rounded-full w-[130px] h-[130px] block mx-auto lg:mx-0"
        />
        <div class="my-auto text-center lg:text-left pt-6 lg:pt-0">
          <h3 class="font-semibold lg:text-2xl">Rebecca Portilla</h3>
          <ul class="list-none">
            <li class="text-pretty dark:text-white/90 mt-2">
              Head of Placements
            </li>
            <li class="h-fit mt-2">
              <div class="flex items-center gap-3 mx-auto lg:mx-0 w-fit">
                <Image
                  src={Makers}
                  alt="Makers Logo"
                  class="block h-[50px] w-[50px]"
                  width={50}
                  height={50}
                />
              </div>
            </li>
          </ul>
        </div>
      </article>
    </div>
  </Container>
</section>
